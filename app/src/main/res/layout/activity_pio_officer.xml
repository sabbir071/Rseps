<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pio_officer"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/freelancerColor"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/nikosh"
            android:gravity="center"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:elevation="2dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Project Name :"
                    android:textColor="#00b22d"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/project_detail"
                    android:layout_toEndOf="@id/project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Pio Officer"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/project_division"
                    android:layout_below="@id/project_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Division :"
                    android:textColor="#00b22d"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/division_text"
                    android:layout_below="@id/project_name"
                    android:layout_toEndOf="@id/project_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Rajshahi"
                    android:textColor="#000000"
                    android:textSize="17sp"

                    />

                <TextView
                    android:id="@+id/project_district"
                    android:layout_below="@id/project_division"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="District :"
                    android:textColor="#00b22d"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/district_text"
                    android:layout_below="@id/division_text"
                    android:layout_toEndOf="@id/project_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Bogura"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    />


                <TextView
                    android:id="@+id/project_upazila"
                    android:layout_below="@id/project_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Upazila :"
                    android:textColor="#00b22d"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/upazila_text"
                    android:layout_below="@id/district_text"
                    android:layout_toEndOf="@id/project_upazila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="43dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Shajahanpur"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/project_union"
                    android:layout_below="@id/project_upazila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Union :"
                    android:textColor="#00b22d"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/union_text"
                    android:layout_below="@id/upazila_text"
                    android:layout_toEndOf="@id/project_union"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="52dp"
                    android:fontFamily="@font/kalpurush"
                    android:gravity="center"
                    android:text="Majhira"
                    android:textColor="#000000"
                    android:textSize="17sp"

                    />


                <RelativeLayout
                    android:layout_below="@id/upazila_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/outline"
                    >

                    <RelativeLayout
                        android:id="@+id/map_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/map"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/map_goog" />

                        <TextView
                            android:id="@+id/map_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/map"
                            android:fontFamily="@font/kalpurush"
                            android:gravity="center"
                            android:text="Get Map Locetion"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </RelativeLayout>



                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        android:layout_margin="10dp"
        android:elevation="2dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <TextView
                android:id="@+id/project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/kalpurush"
                android:gravity="center"
                android:text="Project Status :"
                android:textColor="#00b22d"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/project_status_text"
                android:layout_toEndOf="@id/project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/kalpurush"
                android:gravity="center"
                android:text="Done"
                android:textColor="#000000"
                android:textSize="17sp"
                />


            <TextView
                android:id="@+id/project_des"
                android:layout_below="@+id/project_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/kalpurush"
                android:gravity="center"
                android:text="Description :"
                android:textColor="#00b22d"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/project_des_text"
                android:layout_toEndOf="@id/project_des"
                android:layout_below="@+id/project_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/kalpurush"
                android:gravity="center"
                android:text="fy 2022-23\n id 7433"
                android:textColor="#000000"
                android:textSize="18sp"
                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
















</LinearLayout>